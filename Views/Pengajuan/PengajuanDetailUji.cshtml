<div class="row">
    <div class="col-lg-12">
        <form id="FormTambahPengajuan" method="get" action="">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Informasi Contoh Uji</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-xl-6 col-xs-12">
                            <div class="form-group mb-3">
                                <label for="JenisPengajuan" class="control-label">Jenis Pengajuan <span class="text-danger">*</span></label>
                                <select id="JenisPengajuan" name="JenisPengajuan" class="form-control sJenisPengajuan web-select2" data-type="select"></select>
                            </div>
                            <div class="form-group mb-3">
                                <label>Tipe Pengajuan <span class="text-danger">*</span></label>
                                <select id="TipePengajuan" name="TipePengajuan" class="form-control sTipePengajuan web-select2" ></select>
                            </div>
                            <div class="form-group mb-3">
                                <label>Tipe Lokasi <span class="text-danger">*</span></label>
                                <select id="TipeLokasi" name="TipeLokasi" class="form-control sTipeLokasi web-select2"></select>
                            </div>
                            <div class="form-group mb-3">
                                <label>Nama Contoh Uji <span class="text-danger">*</span></label>
                                <input type="text" id="NamaContoh" name="NamaContoh" class="form-control" placeholder="-- Wajib Diisi --" />
                            </div>
                            <div class="form-group mb-3">
                                <label>Petugas Sampling <span class="text-danger">*</span></label>
                                <input type="text" id="PetugasSampling" name="PetugasSampling" class="form-control" placeholder="-- Wajib Diisi --"  />
                            </div>
                            <div class="form-group mb-3">
                                <label>Wadah <span class="text-danger">*</span></label>
                                <input type="text" id="Wadah" name="Wadah" class="form-control" placeholder="-- Wajib Diisi --"  />
                            </div>
                        </div>
                        <div class="col-xl-6 col-xs-12">
                            <div class="row mb-3">
                                <div class="col-6">
                                    <label>Tanggal Sampling <span class="text-danger">*</span></label>
                                    <input type="text" id="TanggalSampling" name="TanggalSampling" class="form-control datepick" placeholder="dd-mm-yyyy" readonly />
                                </div>
                                <div class="col-6">
                                    <label>Waktu Sampling <span class="text-danger">*</span></label>
                                    <input type="text" id="WaktuSampling" name="WaktuSampling" class="form-control timepick" placeholder="hh:ss" readonly />
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label>Volume Contoh <span class="text-danger">*</span></label>
                                <input type="text" id="VolumeContoh" name="VolumeContoh" class="form-control" placeholder="contoh: 300 ml" />
                            </div>
                            <div class="form-group mb-3">
                                <label>Metode Sampling <span class="text-danger">*</span></label>
                                <select id="MetodeSampling" name="MetodeSampling" class="form-control sMetodeSampling web-select2"></select>
                            </div>
                            <div class="form-group mb-3">
                                <label>Pengawetan <span class="text-danger">*</span></label>
                                <input type="text" id="Pengawetan" name="Pengawetan" class="form-control" placeholder="Isi jenis pengawetan.." />
                            </div>
                            <div class="form-group mb-3">
                                <label>latitude <span class="text-danger">*</span></label>
                                <input type="text" id="Latitude" name="Latitude" class="form-control" placeholder="contoh: -6.2293866" />
                            </div>
                            <div class="form-group mb-3">
                                <label>Longitude <span class="text-danger">*</span></label>
                                <input type="text" id="Longitude" name="Longitude" class="form-control" placeholder="contoh: 106.689089" />
                            </div>
                        </div>                        
                    </div>
                </div>                
            </div>        
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Parameter Analisa Contoh Uji</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-xl-6 col-xs-12">
                            <div class="form-group mb-3">
                                <label>Output Hasil Uji <span class="text-danger">*</span></label>
                                <select id="OutputHasilID" name="OutputHasilID" class="form-control sOutputHasil web-select2"></select>
                            </div>
                            <div class="form-group mb-3">
                                <label>Baku Mutu <span class="text-danger">*</span></label>
                                <select id="BakuMutuID" name="BakuMutuID" class="form-control sBakuMutu web-select2"></select>
                            </div>
                        </div>
                        <div class="col-xl-6 col-xs-12">
                            <div class="form-group mb-3">
                                <label>Badan Air Penerima <span class="text-danger">*</span></label>
                                <select id="BadanAir" name="BadanAir" class="form-control">
                                    <option value="">-- Pilih Badan Air Penerima --</option>
                                    <option value="Sungai">Sungai</option>
                                    <option value="Drainase">Drainase</option>
                                    <option value="-">-</option>
                                </select>
                            </div>
                            <div class="form-group mb-3">
                                <label>Nama Sungai/Drainase Jalan <span class="text-danger">*</span></label>
                                <input type="text" id="NamaSungai" name="NamaSungai" class="form-control" placeholder="-- Detail Lokasi --" />
                            </div>
                        </div>
                        <div class="mt-5">
                            <div class="text-end mb-3">
                                <button type="button" class="btn btn-primary" onclick="ChangeView(3)"><i class="ri-add-circle-line"></i> Update Parameter</button>
                            </div>
                            <table id="tblParameter" class="table table-responsive table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="text-center">No</th>
                                        <th class="text-center">Parameter</th>
                                        <th class="text-center">Satuan</th>
                                        <th class="text-center">Metode</th>
                                        <th class="text-center">Biaya Uji</th>
                                        <th class="text-center">Biaya Alat</th>
                                        <th class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td colspan="7" class="text-center">Tidak ada data</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="text-center mt-2 mb-4">
                                <button class="btn btn-warning mr-2" onclick="ChangeView(1)">Kembali</button>
                                <button type="submit" id="btnSaveDetail" class="btn btn-primary mr-2">Simpan</button>                        
                            </div>
                        </div>
                    </div>                    
                </div>
            </div>
        </form>
    </div>
</div>
